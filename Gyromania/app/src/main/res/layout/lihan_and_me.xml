<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:scaleType="fitXY"
        android:contentDescription="business_image"
        android:src="@drawable/meandlihan"/>
    <TextView
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gyromania- A Real Greek Kitchen "
        android:layout_below="@id/image"
        android:textSize="27dp"
        android:layout_centerInParent="true"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="We are a family owned restaurant/catering company based in Los Angeles."
        android:layout_below="@id/address"
        android:textSize="27dp"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone Num- 6612879878"
        android:textSize="27dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email- info@gyromania.com"
        android:textSize="27dp"/>
    <TextView
        android:id="@+id/adress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address: Canyon Country,Santa Clarita"
        android:textSize="27dp"/>
    <TextView
        android:id="@+id/hours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hours- 10AM to 9PM"
        android:textSize="27dp"/>
</LinearLayout>